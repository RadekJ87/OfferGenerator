<div class="offer-single-container">
    <h1 class="important">Edytuj ofertę</h1>
    <table class="offer-single-header">
        <thead>
        <tr>
            <th class="customer">Klient</th>
            <th>{{offer.customer}}</th>
            <th class="project">Projekt</th>
            <th>{{offer.projectNumber}}</th>
        </tr>
        </thead>
    </table>

    <table class="offer-single-products">
        <thead>
        <tr>
            <th>Numer</th>
            <th>Opis</th>
            <th>MOQ</th>
            <th>Cena</th>
            <th>Komentarz</th>
            <th>Usuń</th>
        </tr>
        </thead>
        <tbody class="table-offer">
        {{#each products}}
            <tr>
<!--                <td>{{this.innerID}}</td> -->
                <td>{{listAllIndex @index}}</td>
                <td>{{this.description}}</td>
                <td>{{this.quantity}}</td>
                <td>{{this.price}} €/pc</td>
                <td>{{this.comment}}</td>
                <td>
                    <form method="POST" action="/offer/modify/{{../offer.mainID}}/{{this.innerID}}?_method=DELETE">
                        <button type="submit">Usuń</button>
                    </form>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    <br>

    <h1 class="important">Dodaj produkt do oferty</h1>
    <form class="new-product-form button-standard" action="/offer/modify/{{offer.mainID}}" method="POST">
        <label>
            <p>
                Opis
            </p>
            <p>
                <input type="text" name="description" required>
            </p>
        </label>
        <label>
            <p>
                Ilość
            </p>
            <p>
                <input type="number" step="1" name="quantity" required>
            </p>
        </label>
        <label>
            <p>
                Cena
            </p>
            <p>
                <input type="number" step="0.01" name="price" min="0.01" max="10000" required>
            </p>
        </label>
        <label>
            <p>
                Komentarz
            </p>
            <p>
                <input type="text" name="comment" maxlength="40">
            </p>
        </label>
        <button class="fix-margin" type="submit">Dodaj</button>
    </form>
</div>

