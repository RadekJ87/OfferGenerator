<div class="invoice-box">
    <table cellpadding="0" cellspacing="0">
        <tr class="top">
            <td colspan="2">
                <table class="offer-data">
                    <tr>
                        <td>
                            <h1>Offer number</h1>
                            <h2>{{offer.projectNumber}}</h2>
                        </td>

                        <td>
                            Created: {{offer.createdAt}}<br/>
                            Due: {{offer.validThru}}<br/>
                            Lead time: 20 working days
                        </td>
                    </tr>
                </table>
            </td>
        </tr>

        <tr class="information">
            <td colspan="2">
                <table>
                    <tr>
                        <td>
                            Kordas Sp. z o.o.<br/>
                            ul. Zakładowa 2<br/>
                            57-215 Srebrna Góra
                        </td>

                        <td>
                            {{offer.customerName}}<br/>
                            {{offer.streetAndNumber}}<br/>
                            {{offer.zipCodeAndCity}}
                        </td>
                    </tr>
                </table>
            </td>
        </tr>

